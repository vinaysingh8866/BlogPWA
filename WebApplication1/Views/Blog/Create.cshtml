@model WebApplication1.Models.Blog

@{
    ViewData["Title"] = "Create";
}

<h1 style="color:white;">Create</h1>

<h4 style="color:white;">Blog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="width=80vw;">
                <label style="color:white;" asp-for="blog_content" class="control-label"></label>
                <textarea asp-for="blog_content" class="form-control"></textarea>
                <span asp-validation-for="blog_content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:white;" asp-for="auther_name" class="control-label"></label>
                <input asp-for="auther_name" class="form-control" />
                <span asp-validation-for="auther_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:white;" asp-for="image" class="control-label"></label>
                <input asp-for="image" class="form-control" />
                <span asp-validation-for="image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Blogs</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
